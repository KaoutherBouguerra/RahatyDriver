<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame"
    tools:context="art4muslim.macbook.rahatydriver.fragments.orders.OrderDetailsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightOrange"
        android:layout_alignParentTop="true"

        android:elevation="10dp"
        android:id="@+id/relativeLayoutGlob">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightOrange"
        android:layout_alignParentTop="true"
        android:padding="6dp"
        android:elevation="10dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:gravity="center"
            android:id="@+id/txt_down_count"
            android:layout_marginTop="6dp"
            android:text="@string/timing"
            />

    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
       >

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/full_round_rect_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:id="@+id/grid_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingTop="6dp"
                    android:src="@mipmap/cat_gaz"/>

                <TextView
                    android:id="@+id/grid_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="5dp"
                    android:text="gaz"
                    android:textColor="@android:color/white"
                    android:textSize="9sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/card" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/linearLayout2"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/linearLayout2"
                android:layout_toRightOf="@+id/linearLayout2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:id="@+id/linearProducts">

                   </LinearLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="4dp"
                        android:padding="3dp"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/txt_price_delevring"
                            android:layout_toStartOf="@+id/txt_price_delevring"
                            android:text="@string/delevering"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/round_left_rect_shape_darkblue"
                          />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/smallround_darkblue"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:id="@+id/txt_price_delevring"
                            android:text="@string/ryal"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="4dp"
                        android:padding="3dp"

                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/txt_price_total"
                            android:layout_toStartOf="@+id/txt_price_total"
                            android:text="@string/sum"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:background="@drawable/round_left_rect_shape_green"
                            android:textColor="@android:color/white" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/smallround_darkgreen"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:id="@+id/txt_price_total"
                            android:text="@string/ryal"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="@drawable/full_rectangle_green"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="10dp"
                    android:text="الإجمالي 200 ريال"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1"
            android:background="@color/colorTooLightBlue">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <art4muslim.macbook.rahatydriver.utils.circularimageview.CircularImageView
                    android:id="@+id/imDriver"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/user_profile_image_background"
                    android:elevation="4dp"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:paddingLeft="@dimen/activity_drawable_padding"
                        android:paddingStart="@dimen/activity_drawable_padding"
                        android:text="محمد ندير علي"
                        android:id="@+id/txt_customer_name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorPrimary"

                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_drawable_padding"
                        android:paddingStart="@dimen/activity_drawable_padding"
                        android:visibility="gone"
                        android:text="00334252171"
                        android:textColor="@color/colorPrimary"
                        android:textSize="9dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_call"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:drawableRight="@mipmap/call"
                android:drawableEnd="@mipmap/call"
                android:drawablePadding="6dp"
                android:background="@drawable/full_rectangle_red"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/callCustomer"
                android:textAllCaps="false"

                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </RelativeLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_above="@+id/rel"
        android:layout_below="@+id/relativeLayout1"
        android:layout_weight="1"
        android:scrollbars="vertical" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/rel"
        android:gravity="center"
        android:visibility="gone"
        android:layout_above="@+id/linearLayout">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:id="@+id/relative_notif"
            android:background="@drawable/round_rectangle_orange">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/notification"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:textColor="@android:color/white"
            android:text="@string/send_notif"
            android:layout_toEndOf="@+id/image"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout0"
        android:visibility="gone"
        android:layout_above="@+id/linearLayout"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_deliver"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@color/color_green"
            android:text="@string/txt_okrequest"
            android:layout_weight="0.5"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_refuse"
            android:textAllCaps="false"
            android:text="@string/cancelOrder"
            android:background="@color/red"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_done"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@color/color_green"
            android:text="@string/accept"
            android:layout_weight="0.5"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel"
            android:textAllCaps="false"
            android:text="@string/txt_order_refuse"
            android:background="@color/red"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"
            />
    </LinearLayout>
</RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />


</RelativeLayout>
