<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_marginTop="16dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf ="@+id/textView8"
        android:layout_toEndOf="@+id/textView8">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/round_black_rect_shape"
            android:text="https://www.google.tn/webhp?sourceid=chrome-instant rlz=1C1VFKB_enTN715TN715 ion=1 espv=2 ie=UTF-8#q=dream"
            android:ems="10"
            android:textSize="12dp"
            android:id="@+id/editText10"
            android:gravity="right|center_vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"

            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:paddingRight="5dp" />

        <TextView
            android:text="@string/lien_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:id="@+id/textView9"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="97dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">

        <Button
            android:text="@string/txt_share"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnShare"
            android:layout_below="@+id/button6"
            android:background="@drawable/full_roundrectangle_green"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:drawableRight="@android:drawable/ic_menu_share"
            android:textColor="@android:color/white"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <Button
            android:text="@string/txt_copier"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:textColor="@android:color/white"
            android:background="@drawable/full_roundrectangle_darkgrey"
            android:id="@+id/btnCopie"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>

    <TextView
        android:text="@string/lien_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold" />

</RelativeLayout>
